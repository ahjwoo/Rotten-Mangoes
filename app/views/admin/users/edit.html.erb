<%= link_to "Back to admin page", admin_users_path %>
<h1>Edit User</h1>
<hr>
  <%= form_for([:admin, @user]) do |f| %>        
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :firstname, "First Name" %><br>
    <%= f.text_field :firstname %>
  </div>
  <div>
    <%= f.label :lastname, "Last Name" %><br>
    <%= f.text_field :lastname %>
  </div>
  <div>
    <%= f.label :admin %><br>
    <%= f.check_box :admin %>
  </div>
  <div><%= f.submit "Submit" %></div>
  <% end %>
